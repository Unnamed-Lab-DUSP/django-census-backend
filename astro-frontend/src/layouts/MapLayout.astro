---
import BaseLayout from './BaseLayout.astro';
import Map from '../components/Map.svelte';
import RippleLoader from '../components/RippleLoader.svelte';
import data from '../instance.json'
const { frontmatter } = Astro.props;
---
<BaseLayout pageName={frontmatter.title}>
    <Map client:load 
        maxBounds={data.mapProps.maxBounds} 
        style={data.mapProps.style}/>
    <RippleLoader client:load primaryColor={data.primaryColor} accentColor={data.accentColor}/>
</BaseLayout>